{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["DOM"],
    "outDir": "dist",
    "allowJs": true,
    "strict": false,
    "typeRoots": [
      "typings",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src",
    "typings",
    "node_modules/@nuclear",
    "../core/src",
    "../scanner"
  ],
  "exclude": [
    "node_modules/@nuclear/*/test",
    "node_modules/@nuclear/**/*.test*",
    "node_modules/@nuclear/ui/stories",
    "../ui/stories",
    "../*/test"
  ]
}
